<div class="container-fluid"><br><br>
 <h4 class="col-lg-3 text-center bg-light mt-4">商品詳細</h1>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2"></div>
    <div class="col-3">
   <%=image_tag @item.item_image, size:'300x300' %>
   <div class="tag-box">
     <% @item.tags.each do |tag| %>
    <span class="label"><%= tag.name %></span>
    <% end %>
   </div>
    </div>
    <div class="col-4">
      <div class="row mt-3 mt-lg-2">
        <p class="col-lg-3">商品名</p>
        <h5 class="col-lg-9"><%= @item.name %></h5>
      </div>
       <div class="row mt-3 mt-lg-2">
        <p class="col-lg-3">税抜き価格</p>
       <h5 class="col-lg-9"><%= @item.price %>円</h5>
      </div>
      <div class="row mt-3 mt-lg-2">
        <p class="col-lg-3">税込み価格</p>
       <h5 class="col-lg-9"><%= @item.with_tax_price %>円</h5>
      </div>
    <div class="col-1"></div>
    <div class="row mt-4 text-center">
        <div class="col-auto offset-lg-2">
          <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>