<h3>商品編集</h3>
  <%= form_with model: [:admin, @item], local: true do |f| %>
    <div class="row form-group">
      <label class="col-md-2 offset-md-2">商品画像</label>
      <div class="col-md-6"><%= f.file_field :item_image, accept: 'image/*' %></div>
    </div>
    <div class="row form-group">
      <label class="col-md-2 offset-md-2">商品名</label>
      <div class="col-md-6"><%= f.text_field :name, placeholder: "商品名", class: "form-control" %></div>
    </div>
    <div class="row form-group">
      <label class="col-md-2 offset-md-2">商品説明</label>
      <div class="col-md-6">
        <%= f.text_area :explanation, placeholder: "ここに説明文を記述します", class: "form-control", size: "100x10" %>
      </div>
    </div>
   
    <div class="row form-group">
      <label class="col-md-2 offset-md-2">税抜き価格</label>
      <div class="col-md-6"><%= f.text_field :price, placeholder: "000", class: "form-control" %></div>円
    </div>
    <div class="row">
      <div class="col-md-2 offset-md-5">
        <% if f.object.new_record? %>
          <%= f.submit "新規登録", class: "btn-lg btn-success" %>
        <% else %>
          <%= f.submit "変更を保存", class: "btn-lg btn-success" %>
        <% end %>
      </div>
    </div>
  <% end %>